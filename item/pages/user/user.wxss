/* pages/user/user.wxss */
/* 顶部 */
.top_box{
  height: 600rpx;
  position: relative;
}
.top_bg{
  width: 100%;
  height: 600rpx;
}
.top_info{
  position: absolute;
  top: 0;
  width: 100%;
  text-align: center;
  margin-top: 100rpx;
}
/* 头像 */
.info_head image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 10rpx solid rgba(255, 255, 255, .3);
}
/* 昵称 */
.info_text{
  color: #fff;
  margin-top: 30rpx;
}
.info_text text{
  display: block
}
.info_text text:last-child{
  font-size: 26rpx;
  margin-top: 10rpx;
}

/* 内容 */
.content{
  width: 94%;
  margin: 40rpx auto 0;
}
.error{
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 18rpx;
  border-radius: 16rpx;
}
.left image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.left text{
  font-size: 30rpx;
  padding-left: 10rpx;
}
.right image{
  width: 16rpx;
  height: 24rpx;
}
